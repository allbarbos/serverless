{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "args": ["--runInBand"],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Serverless",
      "program": "${workspaceFolder}/node_modules/.bin/sls",
      "cwd": "${workspaceFolder}",
      "args": ["offline"]
    }
  ]
}
